@model Virtumart_MVC_3.Models.Product

@using (Html.BeginForm("Remove", "Product", FormMethod.Post))
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="card-title text-center">Remove this Item ?</h1>

                        @Html.HiddenFor(m => m.productid)
                        @Html.HiddenFor(m => m.updatedAt)
                        @Html.HiddenFor(m => m.discount)
                        @Html.HiddenFor(m => m.quantity)
                        @Html.HiddenFor(m => m.price)

                        <div class="mt-3">
                            <label for="name" class="mt-3">Name</label>
                            @Html.TextBoxFor(m => m.productname, new { @class = "form-control" })
                        </div>
                        <div class="mt-3">
                            <label for="name" class="mt-3">Description</label>
                            @Html.TextBoxFor(m => m.productdes, new { @class = "form-control" })
                        </div>

                    </div>


                    <div class="card-body">
                        <div class="d-flex">
                            <button type="submit" class="btn btn-danger mt-3" style="margin: auto">Delete</button>

                            <a class="btn btn-dark mt-3" style="margin: auto" href="@Url.Action("Index","Product")">Cancel</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
}