@model Virtumart_MVC_3.Models.IProduct
@inject IHttpContextAccessor HttpContextAccessor


<div class="container mt-5">
    <div class="row">
       
        <div class="col-md-6">
            <div class="placeholder-img mb-4" style="height: 300px; background-color: #e0e0e0; display: flex; align-items: center; justify-content: center;">
                <span style="color: #888;">Image Placeholder</span>
            </div>
        </div>

        <div class="col-md-6">
            <h2>@Model.productname</h2>
            <p class="mt-3"><strong>Description:</strong> @Model.productdes</p>
            <p><strong>Price:</strong> ₹@Model.price</p>
            @if (HttpContextAccessor.HttpContext.Session.GetString("role") != null)
            {
                <a href="@Url.Action("Index", "Home", new { id = Model.productid })" class="btn btn-primary">
                    Add to Cart
                </a>

            }
          
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary ml-2">Back to Products</a>
        </div>
    </div>
</div>
