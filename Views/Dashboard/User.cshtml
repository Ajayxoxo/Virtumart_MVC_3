@model Virtumart_MVC_3.Models.User

<div class="container mt-5">
    <h2>User Dashboard</h2>

    <div class="card">
        <div class="card-header">
            <h5>User Info</h5>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone Number:</strong> @Model.Phone</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Cart")" class="btn btn-primary">Go to Cart</a>
    </div>
</div>
